CC=clang
CXX=clang++

CXX_FLAGS=-std=c++11 -pedantic -pedantic-errors -Wall -Wextra -Werror -fno-exceptions -fno-rtti\
          -O0 -g3 -D_DEBUG -fsanitize=address -fsanitize=undefined

CXX_INCLUDE=-IDependencies/Utix/Utix/include
CXX_LINK_LIBS_PATH=
CXX_LINK_LIBS= -lc
FILES=Source/*.cpp

compile_objs:
	$(CXX) $(FILES) $(CXX_LINK_LIBS_PATH) $(CXX_LINK_LIBS) $(CXX_INCLUDE) $(CXX_FLAGS) -ogbx.exe
